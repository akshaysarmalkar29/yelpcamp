<% layout("layouts/boilerplate") %>

    <div class="row justify-content-center">
        <h2 class="text-center">New Campground</h2>
        <div class="col-md-8">
            <form action="/campgrounds" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="form-group my-2">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" name="campground[title]" id="title" placeholder="Enter Title" required />
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                </div>
                <div class="form-group my-2">
                    <label for="location">Location</label>
                    <input type="text" class="form-control" name="campground[location]" id="location" placeholder="Enter Location" required />
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                </div>
                <div class="form-group my-2">
                    <label for="price">Price</label>
                    <input type="number" class="form-control" name="campground[price]" id="price" placeholder="Enter Price" required />
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                </div>
                <!-- <div class="form-group my-2">
                    <label for="image">Image URL</label>
                    <input type="text" class="form-control" name="campground[image]" id="image" placeholder="Enter Image URL" required />
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                </div>
                -->
                <div class="input-group mb-3">
                    <input type="file" class="form-control" name="images" accept="image/*" multiple id="inputGroupFile03" aria-describedby="inputGroupFileAddon03" aria-label="Upload">
                  </div>
                <div class="form-group my-2">
                    <label for="description">Description</label>
                    <textarea name="campground[description]" class="form-control" id="description" cols="30" rows="5" placeholder="Enter Description" required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                </div>
                <button class="btn btn-success">Submit</button>
            </form>
        </div>
    </div>